{
  "manifest_version": 3,
  "name": "Job Lens | جاب لنز",
  "version": "1.0.0",
  "description": "نمایش بررسی‌های شرکت‌ها در سایت‌های کاریابی ایران | View company reviews on Iranian job sites",
  "author": "Mehdi Hadizadeh",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://jobinja.ir/*",
    "https://jobvision.ir/*",
    "https://tajrobe.wiki/*",
    "https://job-lens.mehdihadizadeh-k.workers.dev/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "تنظیمات جاب لنز"
  },
  "content_scripts": [
    {
      "matches": [
        "https://jobinja.ir/companies/*",
        "https://jobvision.ir/jobs/*",
        "https://jobvision.ir/companies/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "notes.html",
  "options_ui": {
    "page": "notes.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "privacy.html"],
      "matches": ["https://jobinja.ir/*", "https://jobvision.ir/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
